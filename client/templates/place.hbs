<div class="place__item" data-index="{{index}}">
    <div class="card">
        {{#if isPlaceholder}}
        <div class="card__overlay">
            <a class="place__add-btn btn-floating btn-large">
                <i class="material-icons">add</i>
            </a>
        </div>
        {{/if}} 
        
        {{#if place.photo}}
        <div class="card-image">
            <img src="{{place.photo}}">
        </div>
        {{/if}}

        <div class="card-content">
            <div class="card-title">
                {{place.name}}
                <p class="author">By: {{place.user}}</p>
            </div>

            {{#unless isPlaceholder}}
            <div class="card-separator"></div>
            {{/unless}}

            <div class="card-info">{{place.description}}</div>
        </div>

        {{#unless isPlaceholder}}
        <div class="card-action clearfix">
            <ul>
                <li>
                    <a class="place__review-btn btn-floating">
                        <i class="material-icons">rate_review</i>
                    </a>
                </li>
                
                <li>
                    <button class="place__reviews-btn btn">Reviews <span class="badge">{{place.reviews.length}}</span></button>
                </li>

                {{#if place.isOwner}}
                <li>
                    <a class="place__delete-btn btn-floating">
                        <i class="material-icons">delete_forever</i>
                    </a>
                </li>
                {{else}}
                <li class="empty-btn"></li>
                {{/if}}
            </ul>
        </div>
        {{/unless}}

        <div class="place__review-form">
            <label for="review">Review</label>
            <textarea id="review" class="materialize-textarea">Leave a review of this place...</textarea>
            
            <button class="btn waves-effect waves-light" type="submit" name="action">
                Submit<i class="material-icons right">send</i>
            </button>
        </div>

        {{#unless isPlaceholder}}
        <div class="place__reviews">
            <ul class="hide">
                {{#each place.reviews}}
                <li class="review">
                    <p class="review__author">{{#if this.author}}
                                                Author: {{this.author.username}}
                                            {{else}}
                                                Anonymous
                                            {{/if}}</p>
                    <p class="review__text">- {{this.description}}</p> 
                </li>
                {{/each}}
            </ul>
        </div>
        {{/unless}}
    </div>
</div>